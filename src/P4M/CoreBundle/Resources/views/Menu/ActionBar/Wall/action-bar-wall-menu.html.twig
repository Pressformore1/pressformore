        <a class="action-bar-link{#{% if wall.flag is null or flagged == true%} current-action-bar-item{%endif%}#} content-modifier"
           data-ajaxTarget="action-bar-filters-form" data-toggle="action-bar" data-target="#section-infos" href="#infos"
           title="{{ 'About %wallName% strew'|trans({'%wallName%': wall.name}, 'menu')}}">
            <span class="action-bar-icon glyphicon circle_info"></span>
        </a>
    </li>


    <li id="action-bar-report" class="action-bar-item">
        <a class="action-bar-link{% if wall.flag and flagged == false %} current-action-bar-item{% endif %}"
           data-toggle="action-bar" data-target="#section-report" href="#report" title="{{ 'Report strew'|trans({}, 'menu')}}">
            <span class="glyphicon flag"></span>
        </a>
    </li>

{% endif %}




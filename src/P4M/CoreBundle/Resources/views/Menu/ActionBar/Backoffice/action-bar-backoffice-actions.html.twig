    <div class="action-bar-block">
        <h1 class="action-bar-title"><span class="glyphicon message_empty">&nbsp;</span>{{ 'Your Messages'|trans({}, 'menu')}}</h1>
        <p>{{ 'You\'re using an early access version, be patient!'|trans({}, 'menu')}}</p>

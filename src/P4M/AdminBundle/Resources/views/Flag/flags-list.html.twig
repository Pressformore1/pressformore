{# On étend notre layout #}
{% extends "P4MAdminBundle::admin.html.twig" %}

{% block pageTitle%}Flags Type List{% endblock %}


{# Dans notre layout, il faut définir le block body #}

{%block adminActions%}
<a href="{{path('p4m_admin_createFlag')}}" class="btn btn-info">CREATE FLAG TYPE</a>
{%endblock%}

{% block leftCol %}
{{parent()}}
        <table class="table table-striped table-sortable">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Flag Name</th>
                    <th>Flag Level</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
            {% for flag in flags %} 
                
            <tr class="">
                <td>{{flag.id}}</td>
                <td>{{flag.name}}</td>
                <td>{{flag.level}}</td>
                <td><a href="{{path('p4m_admin_flagedit',{'flagId':flag.id})}}">Edit</a></td>
                
            </tr>

            {% endfor %}


            </tbody>
          </table>

                        
{% endblock %}{# empty Twig template #}

{# On étend notre layout #}
{% extends "P4MAdminBundle::admin.html.twig" %}

{% if postType.id %}
{% set pageTitle= 'Edit PostType'%}
{% else%}
{% set pageTitle= 'Create PostType'%}
{%endif%}
{% block pageTitle%}{{pageTitle}}{% endblock %}
{% block pageSubTitle%}<h3 class="entry-title"><a href="{{path('p4m_admin_postTypeList')}}">Back to post types list</a></h3>{% endblock %}
{# Dans notre layout, il faut définir le block body #}
{% block leftCol %}
{{parent()}}

        <fieldset class="info_fieldset">
            
            <div id="note">
            
            </div>
            <div id="contacts-form">
                <form method="post" {{ form_enctype(form) }}>
                                   
                    {{form_rest(form)}}
                    <div class="formElement">
                        <input type="submit" class="btn btn-primary" />
                    </div>
              </form>
            </div>
            <div class="clear"></div>
            {% if postType.id %}
            <div class="clear text-right edit-actions">
                <a href="{{path('p4m_admin_deletePostType',{'postTypeId':postType.id})}}" class="btn btn-danger">DELETE POST TYPE</a>
            </div>
            {%endif%}
                                  <!-- end #contact-form -->
        </fieldset>


                        
{% endblock %}{# empty Twig template #}


{%block scriptPlugins %}
{{parent()}}
<script type="text/javascript" src="{{ asset('bundles/jonlilckfinder/ckfinder.js') }}"></script>
{% endblock %}

{% block scriptCustom %}
{{parent()}}
<script type="text/javascript" src="{{asset('js/scripts/admin/script-admin.js')}}"></script>
{%endblock%}{# empty Twig template #}
{# On étend notre layout #}
{% extends "P4MAdminBundle::admin.html.twig" %}


{%block pageTitle%}User List <a href="{{path('p4m_admin_resendactivation')}}" class="btn button pfm-red">Envoyer de nouveau un eamild e confirmation aux comptes pas activés. Attention cliquer ici enverra directement les emails.</a>{%endblock%}
{# Dans notre layout, il faut définir le block body #}
{% block leftCol %}
{{parent()}}
        <table class="table table-striped table-sortable">
            <thead>
              <tr>
                <th>#</th>
                <th>Username</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Locked</th>
                <th>Edit</th>
              </tr>
            </thead>
            <tbody>
            {% for user in users %} 
            <tr>
                <td>{{user.id}}</td>
                <td>{{user.username}}</td>
                <td>{{user.firstName}}</td>
                <td>{{user.lastName}}</td>
                <td>{{user.locked}}</td>
                <td><a href="{{path('p4m_admin_useredit',{'username':user.username})}}">Edit</a></td>
              </tr>

            {% endfor %}


            </tbody>
          </table>
    
                        
{% endblock %}{# empty Twig template #}

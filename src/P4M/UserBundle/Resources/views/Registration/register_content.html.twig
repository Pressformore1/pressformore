                           <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
                <div class="login-illu col-lg-17 col-md-17 hidden-sm hidden-xs">
                                    <img class="register-email-illu" src="{{asset('images/design/icon-email.png')}}" alt="" />
                </div>
                <div class="form-blocks  col-lg-43 col-md-43 col-sm-43 col-xs-60">
                                    {{form_errors(form)}}
                                    <div class="form-blocks">
                                            <div class="form-line">
                                     <div class="form-field col-lg-30 colcol-md-35 col-sm-35 col-xs-60">
                                                        {{ form_errors(form.username) }}
                                                        <label for="{{form.username.vars.id}}" class="form-field-title">Username <small class="form-field-explanation">(Title of your profile)</small></label>
                                                           {{form_widget(form.username,{ 'attr': {'class': 'form-field-input'} })}} 
                                                    </div>
                                     <div class="form-field col-lg-30 colcol-md-35 col-sm-35 col-xs-60">
                                                        {{ form_errors(form.email) }}
                                                        <label for="{{form.email.vars.id}}" class="form-field-title">Email</label>
                                                           {{form_widget(form.email,{ 'attr': {'class': 'form-field-input'} })}}
                                                            
                                                    </div>
                                                    <div class="clear"></div>
                                            </div>
                                            <div class="form-line">
                                     <div class="form-field col-lg-30 colcol-md-35 col-sm-35 col-xs-60">
                                                        {{ form_errors(form.firstName) }}
                                                            {{ form_label(form.firstName, 'First name',{ 'label_attr': {'class': 'required form-field-title'} }) }}
                                                            {{form_widget(form.firstName,{ 'attr': {'class': 'form-field-input'} })}}
                                                    </div>
                                     <div class="form-field col-lg-30 colcol-md-35 col-sm-35 col-xs-60">
                                                        {{ form_errors(form.lastName) }}
                                                           {{ form_label(form.lastName, 'Last name',{ 'label_attr': {'class': 'required form-field-title'} }) }}
                                                           {{form_widget(form.lastName,{ 'attr': {'class': 'form-field-input'} })}}
                                                    </div>
                                                    <div class="clear"></div>
                                            </div>
                                            <div class="form-line">
                                     <div class="form-field col-lg-30 colcol-md-35 col-sm-35 col-xs-60">
                                                        {{ form_errors(form.plainPassword) }}
                                                              {{ form_label(form.plainPassword.first, 'Password',{ 'label_attr': {'class': 'required form-field-title'} }) }}
                                                            {{form_widget(form.plainPassword.first,{ 'attr': {'class': 'form-field-input'} })}}
                                                    </div>
                                     <div class="form-field col-lg-30 colcol-md-35 col-sm-35 col-xs-60">
                                                        {{ form_errors(form.plainPassword) }}
                                                         {{ form_label(form.plainPassword.second, 'Confirm your password',{ 'label_attr': {'class': 'required form-field-title'} }) }}
                                                            {{form_widget(form.plainPassword.second,{ 'attr': {'class': 'form-field-input'} })}}
                                                        <br />
                                                            <p id="password-match" class="hidden-soft"><small>Password are similar</small></p>
                                                            <p id="password-no-match" class="hidden-soft"><small>Password are not similar</small></p>
                                                    </div>
                                                    <div class="clear"></div>
                                            </div>

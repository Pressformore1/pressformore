                                     <div class="form-field col-lg-30 colcol-md-35 col-sm-35 col-xs-60">
                                                        
                                                        <label for="invitationCode" class="form-field-title">Your invitation code <small class="form-field-explanation"></small> <a data-target="#modal-join-us" data-toggle="modal" href="#beta-coming-soon" class="">Get one</a></label>
                                                           <input type="text" class="form-field-input" name="invitationCode" id="invitationCode" value="{{ app.request.query.get('token') }}" />
                                                    </div>
                                                    <div class="clear"></div>
                                            </div>#}
                                            </div>
                    </div>
                                    <div class="clear"></div>
                                    <footer class="form-footer">
                                            <div class="form-condition">
                                                {{ form_errors(form.termsAccepted) }}
                                                    {{form_widget(form.termsAccepted)}}
                                                    <label for="{{form.termsAccepted.vars.id}}">I acknowledge that I have read and accept the <a target="_blank" href="{{ path('p4m_core_home') }}#legal-mention">Terms of Use Agreement</a>.</label>
                                            </div>
                                            <button class="primary" type="submit">Create Account</button>
                                            <div class="clear"></div>
                                    </footer>
                                    
                                    {{form_rest(form)}}
                            </form>


                            <div class="clear"></div>

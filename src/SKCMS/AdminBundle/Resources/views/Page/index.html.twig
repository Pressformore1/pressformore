{% extends "SKCMSAdminBundle::layout.html.twig"%}

{% block adminContent %}
        
        
	
    <div class="sortable row-fluid">
            <a {#data-rel="tooltip"#} title="6 new members." class="well span3 top-block" href="#">
                    <span class="icon32 icon-red icon-user"></span>
                    <div>Total Members</div>
                    <div>{{user|length}}</div>
{#                    <span class="notification">6</span>#}
            </a>

            <a data-rel="tooltip" title="4 new pro members." class="well span3 top-block" href="#">
                    <span class="icon32 icon-color icon-star-on"></span>
                    <div>Producers</div>
                    <div>{{producer|length}}</div>
{#                    <span class="notification green">4</span>#}
            </a>

            <a data-rel="tooltip" title="$34 new sales." class="well span3 top-block" href="#">
                    <span class="icon32 icon-color icon-cart"></span>
                    <div>Good Guys (those with mangoPay Id)</div>
                    <div>{{goodGuys|length}}</div>
{#                    <span class="notification yellow">$34</span>#}
            </a>

            <a data-rel="tooltip" title="12 new messages." class="well span3 top-block" href="#">
                    <span class="icon32 icon-color icon-envelope-closed"></span>
                    <div>Pressforms</div>
                    <div>{{pressforms|length}}</div>
{#                    <span class="notification red">12</span>#}
            </a>
    </div>

    <div class="row-fluid sortable">
            <div class="box span12">
                    <div class="box-header well">
                            <h2><i class="icon-th"></i> Page Viewed</h2>
                            </div>
                    <div class="box-content">
                        <canvas id="pageViewed" class="center flotchart" style="height:400px ;width:100%;" data-flotData="{{postViewData|json_encode()}}"></canvas>
                                    </div>
            </div><!--/span-->
            </div><!--/span-->
        <div class="row-fluid sortable">
            <div class="box span12">
                    <div class="box-header well">
                            <h2><i class="icon-th"></i> Wallet Fills</h2>
                            </div>
                    <div class="box-content">
                        <canvas id="WalletFilled" class="center flotchart" style="height:400px;width:100%;" data-flotData="{{walletFillsData|json_encode()}}"></canvas>
                            </div>
            </div><!--/span-->
            </div><!--/span-->
        <div class="row-fluid sortable">
            <div class="box span12">
                    <div class="box-header well">
                            <h2><i class="icon-th"></i> New Users</h2>
                            </div>
                    <div class="box-content">
                        <canvas id="newUsers" class="center flotchart" style="height:400px;width:100%;" data-flotData="{{newUsersData|json_encode()}}"></canvas>
                    </div>
            </div><!--/span-->
            </div><!--/span-->



    </div><!--/row-->
   





                    <!-- content ends -->



        
{% endblock%}
